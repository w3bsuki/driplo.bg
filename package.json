{
  "name": "threadly-svelte",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "node --max-http-header-size=16384 ./node_modules/vite/bin/vite.js dev",
    "build": "node scripts/copy-fonts.js && vite build",
    "postinstall": "node scripts/copy-fonts.js",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lhci autorun --collect.settings.preset=mobile",
    "analyze": "npm run build && vite-bundle-visualizer",
    "perf": "node scripts/performance-monitor.js",
    "lint": "eslint src --ext .ts,.js,.svelte",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.31.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-vercel": "^5.8.0",
    "@sveltejs/eslint-config": "^8.3.4",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "svelte": "^5.36.13",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/jetbrains-mono": "^5.2.6",
    "@fontsource/plus-jakarta-sans": "^5.2.6",
    "@inlang/paraglide-js": "^2.2.0",
    "@inlang/paraglide-js-adapter-sveltekit": "^0.6.7",
    "@sentry/sveltekit": "^10.1.0",
    "@stripe/stripe-js": "^7.6.1",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.5",
    "@tanstack/svelte-query": "^5.83.0",
    "bits-ui": "^2.8.11",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "lucide-svelte": "^0.525.0",
    "sharp": "^0.34.3",
    "stripe": "^18.3.0",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.0.3",
    "zod": "^3.25.76"
  }
}
